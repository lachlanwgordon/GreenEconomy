@page "/businesses"
@page "/businesses/{id:guid}"
@inject HttpClient Http
@inherits BusinessPageBase

<h1>Businesses</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (ViewModel == null || ViewModel.Businesses == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <button class="btn btn-primary" @onclick="ViewModel.OpenNewBusinessPage">Click me</button>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Latitude</th>
                <th>Longitude</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var business in ViewModel.Businesses)
            {
                <tr>
                    <td>@business.Id</td>
                    <td>@business.Name</td>
                    <td>@business.Latitude</td>
                    <td>@business.Longitude</td>
                </tr>
            }
        </tbody>
    </table>
}

